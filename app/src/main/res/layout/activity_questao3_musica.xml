<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Questao3Musica">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jogador: "
            android:textColor="@color/purple_200"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewNomeMusica3"
            />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quem é o compositor da música 'Garota de Ipanema'?"
        android:textAlignment="center"
        android:layout_marginTop="70dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_margin="5dp"
        android:textColor="@color/cardview_dark_background"
        />


    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_margin="10dp"
        app:srcCompat="@drawable/ipanema" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RadioButton
            android:id="@+id/radioButtonLuiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Luiz Gonzaga"
            />

        <RadioButton
            android:id="@+id/radioButtonVinicius"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vicinius de Moraes"
            />

        <RadioButton
            android:id="@+id/radioButtonAntonio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Antonio Carlos Jobim"
            />


    </RadioGroup>

    <Button
        android:id="@+id/buttonMusicaConfirmar3"
        android:layout_width="125dp"
        android:layout_height="55dp"
        android:text="Confirmar"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        />

</LinearLayout>