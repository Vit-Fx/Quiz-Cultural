<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Questao1Artes"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jogador: "
            android:textColor="@color/purple_200"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewNomeArt"
            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quais dos pintores abaixo, sÃ£o brasileiros?"
        android:textAlignment="center"
        android:layout_marginTop="70dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_margin="5dp"
        android:textColor="@color/cardview_dark_background"
        />

    <CheckBox
        android:id="@+id/checkBoxLygia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lygia Clark"
        android:textSize="18dp"
        android:layout_marginTop="15dp"
        />

    <CheckBox
        android:id="@+id/checkBoxMichelangelo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="Michelangelo"
        />

    <CheckBox
        android:id="@+id/checkBoxRomero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="Romero Brito"
        />

    <Button
        android:id="@+id/buttonArtConfirmar1"
        android:layout_width="125dp"
        android:layout_height="55dp"
        android:text="Confirmar"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        />

</LinearLayout>