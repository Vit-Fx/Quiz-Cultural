<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Questao2Musica"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jogador: "
            android:textColor="@color/purple_200"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewNomeMusica2"
            />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quais músicas abaixo podem ser atribuídas a cantora Adele?"
        android:textAlignment="center"
        android:layout_marginTop="70dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_margin="5dp"
        android:textColor="@color/cardview_dark_background"
        />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="match_parent"
        android:layout_height="201dp"
        android:layout_margin="8dp"
        app:srcCompat="@drawable/adele"
        />

    <CheckBox
        android:id="@+id/checkBoxHello"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello"
        />


    <CheckBox
        android:id="@+id/checkBoxBillie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Billie Jean"
        />


    <CheckBox
        android:id="@+id/checkBoxSomeone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Someone Like You"
        />

    <CheckBox
        android:id="@+id/checkBoxThat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="That Sould Be Me"
        />

    <Button
        android:id="@+id/buttonMusicaConfirmar2"
        android:layout_width="125dp"
        android:layout_height="55dp"
        android:text="Confirmar"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        />

</LinearLayout>