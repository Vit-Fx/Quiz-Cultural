<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Questao2Historia"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jogador: "
            android:textColor="@color/purple_200"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewNomeHistoria2"
            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Abaixo temos nomes de alguns homens que já estiveram como presidentes do Brasil. Selecione o nome do homem que NÃO foi presidente. "
        android:textAlignment="center"
        android:layout_marginTop="70dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_margin="5dp"
        android:textColor="@color/cardview_dark_background"
        />

    <CheckBox
        android:id="@+id/checkBoxGetulio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Getúlio Vargas"
        android:textSize="18dp"
        android:layout_marginTop="15dp"
        />

    <CheckBox
        android:id="@+id/checkBoxVenceslau"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="Venceslau Brás"
        />

    <CheckBox
        android:id="@+id/checkBoxJoao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="João Kléber"
        />

    <CheckBox
        android:id="@+id/checkBoxAfonso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="Afonso Pena"
        />

    <Button
        android:id="@+id/buttonHistoriaConfirmar2"
        android:layout_width="125dp"
        android:layout_height="55dp"
        android:text="Confirmar"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        />

</LinearLayout>