<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Questao2Artes"
    >

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jogador: "
            android:textColor="@color/purple_200"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewNomeArt2"
            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Qual o nome do artista responsável por essa famosa obra?"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_margin="5dp"
        android:textAlignment="center"
        android:textColor="@color/cardview_dark_background"
        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="196dp"
        android:layout_margin="10dp"
        app:srcCompat="@drawable/dali" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RadioButton
            android:id="@+id/radioButtonTarsila"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tarsila do Amaral"
            android:textSize="18dp"
            />

        <RadioButton
            android:id="@+id/radioButtonLeonardo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Leonardo da Vinci"
            android:textSize="18dp"
            />

        <RadioButton
            android:id="@+id/radioButtonSalvador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salvador Dalí"
            android:textSize="18dp"
            />

        <RadioButton
            android:id="@+id/radioButtonPicasso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Pablo Picasso"
            />
    </RadioGroup>

    <Button
        android:id="@+id/buttonArtConfirmar2"
        android:layout_width="125dp"
        android:layout_height="55dp"
        android:text="Confirmar"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        />
</LinearLayout>